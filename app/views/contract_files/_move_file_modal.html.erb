<div class="relative z-10 hidden" id="moveFileModal" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-controller="contracts">
  <div class="fixed inset-0 bg-gray-100 bg-opacity-75 transition-opacity"></div>
  <div class="fixed inset-0 z-10 w-screen border">
    <div class="flex min-h-full justify-center p-4 text-center items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left transition-all sm:my-8 sm:w-[50%] sm:p-6 max-h-[560px] border">
        <div class="bg-white w-full mb-4">
          <p class="float-left z-40 font-bold mb-6">Move Contract</p>
          <button data-controller="settings" data-action="click->settings#closeModal" data-modal-id="moveFileModal" type="button" class="float-right z-40">
            <%= image_tag "icons/close-blue.svg" %>
          </button>
          <div class="bg-white w-full overflow-y-auto max-h-[500px]">
            <% current_user.contracts&.each do |contract| %>
              <div class="flex justify-between items-center py-4 mb-2">
                <div class="flex items-center">
                  <%= image_tag "https://img.logo.dev/#{contract.vendor&.domain}?token=#{ENV['LOGO_DEV']}&size=43&format=png", { class: "mr-2 w-14 h-14 mr-4", onerror: "this.src='#{asset_path('icons/empty.svg')}'" } %>
                  <div class="flex flex-col">
                    <span class="text-base font-bold mb-2"><%= contract.name&.titleize %></span>
                    <span class="text-xs text-gray-500">
                      <%= contract.vendor.present? ? contract.vendor.name&.titleize : "Unknown Vendor" %>
                      â€¢ Last viewed <%= last_viewed_in_timezone(contract, current_user.time_zone)%> ago
                    </span>
                  </div>
                </div>
                <button type="button" class="text-black no-border flex items-center text-base"
                        data-action="click->contracts#moveContractFile" data-modal-id="moveFileModal"
                        data-contract-id="<%= contract.id %>" data-contract-name="<%= contract.name&.titleize %>">
                  Select
                  <%= image_tag "icons/right-icon.svg", class: "ml-2 w-4 h-4" %>
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
