<div data-dropdown-target="menu"
  data-transition-enter="transition ease-out duration-200"
  data-transition-enter-from="opacity-0 translate-y-1"
  data-transition-enter-to="opacity-100 translate-y-0"
  data-transition-leave="transition ease-in duration-150"
  data-transition-leave-from="opacity-100 translate-y-0"
  data-transition-leave-to="opacity-0 translate-y-1"
  class="absolute hidden z-10 mt-2 w-56 origin-top-right rounded-lg bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="document-optn" tabindex="-1">
  <div class="py-1" role="none">
    <p class="hover:bg-gray-200 text-slate-600 cursor-pointer flex items-center px-5 py-2" role="menuitem" tabindex="-1" id="move-contract-file" data-controller="settings" data-action="click->settings#openModal" data-modal-id="moveFileModal" data-contract-file-id="<%= contract_file.id %>" data-vendor-public-id="<%= vendor&.public_id %>">
      <%= image_tag "icons/move-icon.svg", class: "h-5 w-5 mr-2" %>
      Move
    </p>
    <%= link_to rails_blob_path(contract_file.file, disposition: "attachment"), class: "hover:bg-gray-200 text-slate-600 hover:text-slate-600 cursor-pointer flex items-center px-5 py-2", role: "menuitem", tabindex: "-1", id: "download-file" do %>
      <%= image_tag "icons/download-icon.svg", class: "h-5 w-5 mr-2" %>
      Download
    <% end %>

    <p class="hover:bg-gray-200 text-slate-600 cursor-pointer flex items-center px-5 py-2"    role="menuitem"
        tabindex="-1"
        data-controller="contracts"
        data-action="click->contracts#updateContractFile"
        data-contract-file-id="<%= contract_file.id %>"
        data-vendor-public-id="<%= vendor&.public_id  %>"
        data-contract-file-name="<%= contract_file.file.filename %>"
        data-status-param="analyzing">
      <%= image_tag "icons/re-analyze-icon.svg", class: "h-5 w-5 mr-2" %>
      Re-Analyze
    </p>
    <p class="hover:bg-gray-200 text-slate-600 cursor-pointer flex items-center px-5 py-2"
       role="menuitem"
       tabindex="-1"
       id="delete-contract-file"
       data-controller="settings"
       data-contract-file-id="<%= contract_file.id %>"
       data-contract-file-name="<%= contract_file.file.filename %>"
       data-vendor-public-id="<%= vendor&.public_id  %>"
       data-action="click->settings#openModal"
       data-modal-id="removeDocument">
      <%= image_tag "icons/delete-icon.svg", class: "h-5 w-5 mr-2" %>
      <span style="color: #B91C1C;" class="font-bold">Delete Document</span>
    </p>
  </div>
</div>