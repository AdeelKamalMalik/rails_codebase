<div class="relative z-10 hidden" id="newContract" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-controller="settings dropzone">
  <div class="fixed inset-0 bg-gray-100 bg-opacity-75 transition-opacity"></div>
  <div class="fixed inset-0 z-10 w-screen overflow-y-auto border">
    <div class="flex min-h-full justify-center p-4 text-center items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left  transition-all sm:my-8 sm:w-full sm:p-6 lg:w-2/3 border">
        <div class="bg-white w-full h-[600px] overflow-y-auto">
          <button data-controller="settings" data-action="click->dropzone#removeFiles click->settings#closeModal" data-modal-id="newContract" type="button" class="float-right z-40">
            <%= image_tag "icons/close-blue.svg" %>
          </button>
          <%= render partial: 'shared/dropzone_body' %>
        </div>
        <div class="flex lg:justify-end justify-center items-center gap-8 mt-10 lg:mt-0">
          <button class="btn btn-primary mr-2 hidden" id="upload-files" data-action="click->dropzone#uploadFiles">
            <span class="when-enabled">Upload</span>
            <span class="when-disabled">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="animate-spin inline-block h-4 w-4 mr-2" role="img" aria-labelledby="amwb7ugd968kpb56uc2wpox50n2qwl9p">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>Uploading...
            </span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
