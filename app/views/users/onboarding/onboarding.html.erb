    <footer class="flex justify-between sticky top-[100vh]">
      <div class="flex">
        <p class="text-medium text-[#64748B] mr-6">@2024 Contractful</p>
        <a class="font-medium font-semibold" href="https://contractful.co/privacy" target="_blank">Privacy Policy</a>
      </div>
      <button class="btn btn-primary px-8">Next <%= image_tag 'icons/arrow-left.svg', class: 'ml-3 text-sm' %></button>
