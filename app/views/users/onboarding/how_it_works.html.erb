<%= render "shared/flash" %>
<div class="flex">
  <div class="w-1/5 px-4 py-12 sm:px-6 lg:px-8 h-screen hidden md:block">
    <nav class="flex justify-center" aria-label="Progress">
      <ol role="list" class="space-y-6 list-none">
        <li>
          <%= link_to privacy_user_onboarding_path, class: "cursor-pointer group flex items-start text-sm font-medium text-gray-500 hover:text-blue-500" do %>
            <span class="relative flex h-5 w-5 flex-shrink-0 items-center justify-center">
              <svg class="h-full w-full text-blue-700" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
              </svg>
            </span>
            <span class="ml-3">Privacy & Security</span>
          <% end %>
        </li>
        <li>
          <%= link_to profile_information_user_onboarding_path, class: "cursor-pointer group flex items-start text-sm font-medium text-gray-500 hover:text-blue-500" do %>
            <span class="relative flex h-5 w-5 flex-shrink-0 items-center justify-center">
              <svg class="h-full w-full text-blue-700" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
              </svg>
            </span>
            <span class="ml-3">Profile Information</span>
          <% end %>
        </li>
        <li>
          <!-- Current Step -->
          <a class="cursor-pointer flex items-start" aria-current="step">
          <span class="relative flex h-5 w-5 flex-shrink-0 items-center justify-center" aria-hidden="true">
          <span class="absolute h-4 w-4 rounded-full bg-indigo-200"></span>
          <span class="relative block h-2 w-2 rounded-full bg-indigo-600"></span>
          </span>
          <span class="ml-3 text-sm font-medium text-blue-700">How it works</span>
          </a>
        </li>
      </ol>
    </nav>
  </div>

  <div data-controller="dropzone" data-dropzone-redirect-url-on-submit-value="/" class="lg:w-4/5 w-full px-4 py-12 sm:px-6 rounded-lg m-5 lg:px-8 bg-gray-50" data-controller="dropzone">
    <div class="flex flex-col gap-8 md:flex-row w-full lg:mx-16">
      <div class="flex md:w-1/2 w-full">
        <div class="mb-4 flex justify-center items-center flex-shrink-0 sm:mb-0 sm:mr-4 h-[64px] w-[64px] bg-white border rounded-lg">
          <%= image_tag "icons/misc-upload.svg", size: '36.25x36.25', class: '' %>
        </div>
        <div class="ml-3 md:ml-0 w-2/3">
          <h4 class="text-lg font-bold">Upload documents to start</h4>
          <p class="mt-1 text-gray-500">Get a quick grasp on your contracts. Upload with Contractful.</p>
        </div>
      </div>
      <div class="flex md:w-1/2 w-full">
        <div class="mb-4 flex justify-center items-center flex-shrink-0 sm:mb-0 sm:mr-4 h-[64px] w-[64px] bg-white border rounded-lg">
          <%= image_tag "icons/board-design-drawing-ease-process.svg", size: '36.25x36.25', class: '' %>
        </div>
        <div class="ml-3 md:ml-0 w-2/3">
          <h4 class="text-lg font-bold">Simplified details in one view</h4>
          <p class="mt-1 mb-5 md:mb-0 text-gray-500">Contractful simplifies contracts. See key details like products, quantities, and timelines in one view.</p>
        </div>
      </div>
    </div>

    <div class="md:mt-16 md:mx-16">
      <div class="bg-white w-full rounded-lg shadow-md h-[500px] overflow-y-auto py-6">
        <%= render partial: 'shared/dropzone_body' %>
      </div>
    </div>

    <div class="flex flex-col lg:flex-row justify-between items-center lg:mx-20 mt-16">
      <div class="flex flex-col lg:items-start items-center">
        <div class="text-gray-500">
          Donâ€™t want to upload a document?
        </div>
        <div class="flex gap-2 whitespace-nowrap mt-3">
          <p class="text-blue-700 font-semibold cursor-pointer" data-action="click->dropzone#sampleContract">Use a Sample Document</p>
          <%= link_to sample_contracts_path do %>
          <%= image_tag "icons/cloud-download.svg" %>
          <% end %>
        </div>
      </div>
      <div class="flex lg:justify-end justify-center items-center gap-8 mt-10 lg:mt-0">
        <span class="text-blue-700 font-semibold cursor-pointer" data-action="click->dropzone#goToDashboard">Go to Dashboard</span>
        <button class="btn btn-primary mr-2 hidden" id="upload-files" data-action="click->dropzone#uploadFiles">
          <span class="when-enabled">Upload</span>
          <span class="when-disabled">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="animate-spin inline-block h-4 w-4 mr-2" role="img" aria-labelledby="amwb7ugd968kpb56uc2wpox50n2qwl9p">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>Uploading...
          </span>
        </button>
      </div>
    </div>
  </div>
</div>
