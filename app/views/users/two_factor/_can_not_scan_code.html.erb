<div class="relative z-10 hidden" id="cantScanCode" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-controller="settings">
  <div class="fixed inset-0 bg-gray-100 bg-opacity-75 transition-opacity"></div>
  <div class="fixed inset-0 z-10 w-screen overflow-y-auto border">
    <div class="flex min-h-full justify-center p-4 text-center items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left  transition-all sm:my-8 sm:w-full sm:p-6 lg:w-1/3 border">
        <h6 class="font-semibold mb-10"><%= t("users.two_factor.change_auth_app.cant_scan") %></h6>
        <div class="form-group mt-3 mb-10">
            <p class="mt-3 mb-5 text-gray-500">Trouble scanning? Enter this key in your app instead:</p>
            <p><%= current_user.otp_app_code %></p>
        </div>
        <div class="flex justify-end">
          <p class="btn btn-white text-blue-700 border-blue" data-action="click->settings#closeModal" data-modal-id="cantScanCode"><%= t("users.two_factor.change_auth_app.cancel") %></p>
          <p class="btn btn-primary ml-3" data-action="click->settings#openModal" data-modal-id="verifyCode"><%= t("users.two_factor.change_auth_app.next") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
