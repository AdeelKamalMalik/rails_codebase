<div class="h-screen w-full items-center bg-gradient-to-br from-primary-50 via-teal-100 to-purple-100" data-controller="settings">
  <div class="flex items-center justify-center h-screen w-full">
    <div class="border w-full md:w-2/3 lg:w-1/3 bg-white p-5 mx-5 rounded-lg">
      <h6 class="font-semibold"><%= t ".verify_header" %></h6>
      <div class="form-group mt-3">
        <input placeholder="Enter code here" class="form-control" id="phone_verification" type="text" name="code" data-settings-target="phoneNumber" required>
        <p class="text-sm mt-1 text-red-600" id="m-verify-phone-error"></p>
        <div>
          <p class="text-blue-700 hover:text-blue-500 float-right font-semibold cursor-pointer mt-1" data-action="click->settings#resendCode" data-resend="true"><%= t ".resend_code" %></p>
          <p class="text-green-500 hidden" id="code-sent">code sent!</p>
        </div>
      </div>
      <div class="flex form-group items-center cursor-pointer w-full pt-3">
        <input class="border-blue" type="checkbox" value="true" name="remember_me" id="remember_me">
        <label for="remember_me" class="ml-3 mt-1"><%= t (".verify_ask_again") %></label>
      </div>
      <div class="gap-4 flex justify-end mt-3 md:mt-0">
        <%= link_to t(".go_back"), add_phone_user_two_factor_path, class: "btn btn-white text-blue-700 border-blue-700 hover:text-blue-500 hover:bg-white" %>
        <%= render "shared/button", button_text: "Verify", disable_btn_text: 'Verifying...', data_action: 'click->settings#verifyPhoneNo' %>
      </div>
    </div>
  </div>
</div>
