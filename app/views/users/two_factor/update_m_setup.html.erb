<div data-controller="settings" x-data="{ openTab: 2 }">
  <div class="md:mt-24 mt-8 container mx-auto md:px-16">
    <h1>Settings</h1>
    <div >
      <div >
        <div class="flex space-x-4 px-2 mt-7">
          <%= link_to "Account", account_settings_path(tab: 1), class: "text-black hover:text-black py-2 px-4 cursor-pointer"%>
          <%= link_to "Security", account_settings_path(tab: 2), class: "border-b-2 border-indigo-500 text-black hover:text-black py-2 px-4 cursor-pointer"%>
          <%= link_to "Alerts", account_settings_path(tab: 3), class: "text-black hover:text-black py-2 px-4 cursor-pointer"%>
          <%= link_to "Billing", account_settings_path(tab: 4), class: "text-black hover:text-black py-2 px-4 cursor-pointer"%>
        </div>
      </div>
    </div>
  </div>
  <div class="border-b border-gray-200"></div>
  <div class="flex items-center gap-4 container mx-auto md:px-20 mt-7 cursor-pointer text-blue-700">
    <%= image_tag "icons/arrow-left-blue.svg" %>
    <%= link_to "Go Back", account_settings_path(tab: 2), class: "font-semibold"%>
  </div>
  <div class="flex flex-col sm:flex-row gap-8 justify-between container mx-auto md:px-20 mt-7">
    <div class="lg:w-1/3 w-full">
      <div class="flex font-semibold items-center">
        2-Step Verification Phone
      </div>
      <p class="mt-4 text-gray-500">
        When you add a number for 2-Step Verification, Contractful will send you a text message to make sure the number is yours.
      </p>
    </div>
    <% if current_user.phone_number.present? %>
      <div class="bg-gray-50 p-5 lg:pb-16 lg:w-1/3 w-full rounded-md">
        <p class="font-semibold">Your authenticator</p>
        <div class="flex justify-between items-center">
          <div class="flex mt-6">
            <p class="self-baseline text-lg"><%= ISO3166::Country.new(current_user.country_code || 'US')&.emoji_flag %></p>
            <div class="ml-5">
              <p><%= current_user.phone_number %></p>
              <% if current_user.phone_verified %>
                <p class="text-green-700 mt-1">Verified</p>
              <% else %>
                <p class="mt-3 text-gray-500">Not Verified</p>
                <p class="mt-5 cursor-pointer text-blue-700 font-semibold" data-action="click->settings#openModal" data-modal-id="verifyPhone" data-modal-title="Verify this phone number">
                  Verify phone number
                </p>
              <% end %>               
            </div>
          </div>
          <div>
            <%= link_to image_tag('icons/trash.svg'), user_two_factor_path, data: { turbo_method: :delete, turbo_confirm: t("are_you_sure") } %>
          </div>
        </div>
      </div>
    <% else %>
      <div data-action="click->settings#openModal" data-modal-id="addPhoneNumber" class="btn btn-primary bg-blue">
        <span class="mx-2 text-white"><%= image_tag "icons/plus.svg", size:'16x16' %></span>
          Add  Phone Number
      </div>
    <% end %>
  </div>
</div>

<%= render partial: 'add_phone_number', locals: { modal_id: "addPhoneNumber" } %>
<%= render partial: 'verify_phone', locals: { modal_id: 'verifyPhone' } %>

