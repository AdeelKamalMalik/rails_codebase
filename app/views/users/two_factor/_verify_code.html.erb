<div class="relative z-10 hidden" id="<%= modal_id %>" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-controller="settings">
  <div class="fixed inset-0 bg-gray-100 bg-opacity-75 transition-opacity"></div>
  <div class="fixed inset-0 z-10 w-screen overflow-y-auto border">
    <div class="flex min-h-full justify-center p-4 text-center items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left  transition-all sm:my-8 sm:w-full sm:p-6 lg:w-1/3 border">
        <h6 class="font-semibold mb-10">Set up authenticator app</h6>
        <p>Enter the 6-digit code you see in the app</p>
        <%= form_with url: user_two_factor_path do |form| %>
        <div class="form-group mt-3 mb-10">
          <%= form.text_field :code, placeholder: "Enter code", class: "form-control", required: true %>
          <% if params[:verify_code] %>
            <p class="text-red-500 px-1 mt-2 text-sm">Incorrect verification code</p>
          <% end %>
        </div>
        <div class="flex flex-col md:flex-row justify-between lg:items-center mt-64">
          <p class="text-blue-700 cursor-pointer" data-action="click->settings#goBack">Go Back</p>
          <div class="flex justify-between mt-3 lg:mt-0">
            <p data-action="click->settings#closeModal" data-modal-id="<%= modal_id %>" class="btn btn-white text-blue-700 border-blue-700 hover:text-blue-500 hover:bg-white">Cancel</p>
            <%= form.submit "Complete", class:"btn btn-primary ml-3" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
