<div class="relative z-10 hidden" id="passwordModal" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-controller="settings">
  <div class="fixed inset-0 bg-gray-100 bg-opacity-75 transition-opacity"></div>
  <div class="fixed inset-0 z-10 w-screen overflow-y-auto border">
    <div class="flex flex-col justify-center items-center h-full">
        <div class="lg:p-10 p-4 bg-white rounded-lg border border-gray-200 dark:bg-gray-900 dark:border-gray-700">
          <h4 class="h4 mb-4">Update Password</h4>
          <%= form_with(model: current_user, url: account_settings_path, local: true, html: { method: :put }, class: "max-w-lg") do |f| %>
            <%= render "shared/error_messages", resource: current_user %>

            <div class="form-group">
              <%= f.label :current_password %>
              <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Current password", class: "form-control" %>
              <p class="text-sm text-gray-600 mt-3">We need your current password to confirm your changes</p>
            </div>

            <div class="form-group">
              <%= f.label :password, "New password" %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "New password", class: "form-control" %>
              <% if @minimum_password_length %>
                <p class="text-sm text-gray-600 mt-3"><%= @minimum_password_length %> characters minimum</p>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm new password" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password", class: "form-control" %>
            </div>

            <div class="form-group flex justify-end">
              <button data-controller="settings" data-action="click->settings#closeModal" data-modal-id="passwordModal" type="button" class="btn btn-white mr-2">Cancel</button>
              <%= f.submit "Update", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
