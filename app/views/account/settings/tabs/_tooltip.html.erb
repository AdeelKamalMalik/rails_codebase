<div class="relative flex items-center text-gray-500 cursor-pointer hover:text-gray-600" x-data="{ hover: false }"
  @mouseenter="hover = true" @mouseleave="hover = false">
  <span class="ml-2"><%= image_tag "icons/question-mark.svg", size:'16x16' %></span>
  <div class="relative">
    <div class="absolute bottom-0 inline-block w-96 px-4 py-3 mb-5 -ml-32 text-gray-700 bg-gray-50 rounded-lg"
      x-show="hover" x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 transform scale-90"
      x-transition:enter-end="opacity-100 transform scale-100"
      x-transition:leave="transition ease-in duration-300"
      x-transition:leave-start="opacity-100 transform scale-100"
      x-transition:leave-end="opacity-0 transform scale-90" x-cloak>
        <span class="inline-block text-sm leading-tight p-3">
          <% if app %>
            These apps will generate a 6 digit code for you to enter when you set up
            <ul class="mt-3">
              <li>Google Authenticator</li>
              <li>Microsoft Authenticator</li>
              <li>1Password</li>
              <li>Authy</li>
            </ul>
          <% else %>
            Contractful will send you a 6-digit text message to make sure the number is yours.
          <% end %>
        </span>
      <span class="absolute bottom-0 right-0 w-5 h-5 -mb-1 transform rotate-45 bg-gray-50"
        style="left:50%;"></span>
    </div>
  </div>
</div>
