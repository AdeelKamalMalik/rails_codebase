
<% content_for :form_block do %>
  <div class="my-5">
    <h2 class="mb-px dark:text-black"><%= t('.sign_in') %></h2>
  </div>

  <%= form_with(model: resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "dark:text-black" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-3 form-control dark:bg-white dark:text-black", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "dark:text-black" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-3 form-control dark:bg-white dark:text-black", required: true %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group mb-8">
        <%- if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
          <%= link_to t(".forgot_your_password"), new_password_path(resource_name), class: "font-semibold" %>
        <% end -%>
      </div>
    <% end -%>

    <div class="form-group">
      <%= f.submit t('.sign_in'), class: "btn btn-primary btn-expanded" %>
    </div>

  <%#   <div class="flex items-center my-10 px-4">
      <div class="flex-grow bg bg-gray-200 h-0.5"></div>
      <div class="flex-grow-0 mx-5 text">Sign In Options</div>
      <div class="flex-grow bg bg-gray-200 h-0.5"></div>
   </div> %>

    <%#= link_to image_tag("icons/google.svg", class: "mr-3") + t(".google_oauth2"), root_path, class: 'btn btn-block shadow text-xl my-8 font-normal' %>
    <%= link_to t(".sign_up"), new_user_registration_path, class: 'font-semibold mt-2' %>
  <% end %>
<% end %>

<%= render "devise/shared/form_block" %>
